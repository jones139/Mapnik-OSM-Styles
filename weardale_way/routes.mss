#routes {
   [route_name="Weardale Way"][route="hiking"],
   [route_name="Weardale Way"][route="foot"] {
   line-join:miter;
   line-color:rgba(255,0,0,0.5);
   line-width:2;
   line-dasharray:3,1;
  
   text-placement:line;
    text-face-name:@serif;
    text-name:"[route_name]";
    text-size:3;
    text-spacing: 10;
    text-halo-radius:0.5;
    text-halo-fill:rgba(255,255,255,0.5);

    }

}
